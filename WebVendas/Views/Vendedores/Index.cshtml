@model IEnumerable<WebVendas.Models.Vendedor>

@{
    ViewData["Title"] = "Vendedores";
}

<h3>@ViewData["Title"]</h3>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Novo</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <!--Cabeçalho-->
        <tr class="bg-primary">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
                <!--nome do vendedor-->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
                <!--Email do vendedor-->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
                <!--Data Nasc do vendedor-->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalarioBase)
                <!--SalarioBase do vendedor-->
            </th>           
            <th>
               <!--Opçoes-->
            </th>
          
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataNascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalarioBase)
                </td>             
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>

                </td>
            </tr>

        }


    </tbody>
</table>

